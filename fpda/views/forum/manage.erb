<%= partial 'shared/forums' %>

<br/>
<table class="forumTable" style="width:70%">
	<tbody>
		<tr>
			<th style="width:2%"></th>
			<th style="width:20%">bot_updated</th>
			<th style="width:25%">Категория</th>
			<th>check</th>
			<th>форум</th>
			<th>dwnl</th>
		</tr>
		<% @forums.each_with_index do |item,ind| %>
		<tr>
			<td style="text-align:center"><%= ind %></td>
			<td style="text-align:left" class="altCol"><%= item.bot_updated.strftime("%F %k:%M ") if item.bot_updated %></td>
			<td style="text-align:left" class="altCol"><%= item.descr %></td>
			<td style="text-align:left"> <a href='<%= "/fpda/bot/check_forum/#{item.fid}" %>'>check</a> </td>
			<td class="postslisttopic">
				<a href='<%= "/fpda/forum/manage/#{item.fid}" %>'><%= item.title %></a>
				...
				<a href='<%= "/fpda/forum/show/#{item.fid}" %>'>[show]</a>
				<a href='<%= "http://4pda.ru/forum/index.php?showforum=#{item.fid}" %>'>[orig]</a>
			</td>
			<td style="text-align:center">
				<a href='<%= (item.check==1 ? "/fpda/forum/untrack_f/#{item.fid}" : "/fpda/forum/track_f/#{item.fid}") %>'>
				<%=(item.check==1 ? "untrack" : "track") %></a>
				</td>
		</tr>
		<% end %>
	</tbody>
</table>
